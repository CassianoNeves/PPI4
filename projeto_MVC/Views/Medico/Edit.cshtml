@model projeto_MVC.Dominio.Medico

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar <b>Médico</b></h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Crm, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Crm, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Crm, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @type = "email" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="IdEspecialidades">Especialidade</label>
            <div class="col-md-10">
                <select multiple data-placeholder="Selecione..." class="chosen-select form-control" id="IdEspecialidades" name="IdEspecialidades">
                    @foreach (projeto_MVC.Dominio.Especialidade especialidade in ViewBag.Especialidades)
                    {
                        if (Model.IdEspecialidades.Any(e => e == especialidade.Id))
                        {
                            <option selected value="@especialidade.Id">@especialidade.Nome</option>
                        }
                        else
                        {
                            <option value="@especialidade.Id">@especialidade.Nome</option>
                        }
                    }

                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="HrInicio">Início do atendimento</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.HrInicio, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="HrFim">Fim do atendimento</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.HrFim, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="DuracaoConsulta">Duração da Consulta</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DuracaoConsulta, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="IdDayOfWorks">Dias de atendimento</label>
            <div class="col-md-10">
                <select data-placeholder="Selecione..." class="chosen-select form-control" name="IdDayOfWorks" id="IdDayOfWorks" multiple>
                    @for (int i = 0; i < ViewBag.DiasDaSemana.Length; i++)
                    {
                        if (Model.IdDayOfWorks.Any(e => e.Equals(i)))
                        {
                            <option selected value="@i">@ViewBag.DiasDaSemana[i]</option>

                        }
                        else
                        {
                            <option value="@i">@ViewBag.DiasDaSemana[i]</option>
                        }
                    }
                </select>

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" value="Save" class="btn btn-default">Salvar</button>
            </div>
        </div>
    </div>

    <div>
        @Html.ValidationSummary()
    </div>
}

<div>
    <a class="btn btn-default" href="/Medico/List"><i class="fa fa-angle-left" aria-hidden="true"></i> Voltar</a>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
